{% macro question(quest) %}
    <div class="panel panel-default">
        <div class="panel-heading row">
            <div class="col-lg-8"><h3 class="panel-title">{{ quest.title }}</h3></div>
            <div class=" col-lg-4 text-right">[{{ quest.subject }}]</div></h3>
        </div>
        <div class="panel-body">
            {{ quest.descr|nl2br }}
            {% if quest.resum == 'Не решался' %}{% else %}<h4><strong>Итог:</strong> {{ quest.resum }} </h4>{% endif %}
        </div>
        {% if quest.verdict is not empty %}<div class="panel-footer">Комментарий: {{ quest.verdict|nl2br }}</div>{% endif %}
    </div>
{% endmacro %}
